<div class="topic-index-wrapper">
	<div class=container>
		<% @favorite_topics.each do |topic| %>
			<div class="row">
				<div class="col-md-6 col-md-offset-3">
					<div class="topic-index-single">
						<h2 class="topic-author">
							<%= topic.user.name %>
						</h2>
						<%= image_tag topic.image.url %>
						<% if !topic.favorite_users.include?(current_user) %>
							<%= link_to "いいねする", favorites_path(topic_id: topic.id), method: :post, class: 'like topic_index_icon' %>
						<% else %>
							<%= link_to "いいねを取り消す", favorite_path(topic_id: topic.id, user_id: current_user.id), method: :delete, class: 'liked topic_index_icon' %>
						<% end %>
							<%= topic.favorites.count %>
							<%= link_to "#", new_comment_path(topic_id: topic.id), class: 'comment topic-index-icon' %>
						<p class="topic-text">
							<%= topic.description %>
						</p>
					</div>
				</div>
			</div>	
		<% end %>	
	</div>
</div>